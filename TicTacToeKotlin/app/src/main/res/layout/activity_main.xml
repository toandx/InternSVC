<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.svc.toandx.tictactoekotlin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.svc.toandx.tictactoekotlin.PlayBoard
        android:id="@+id/playboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick0"
        custom:color="#000000"
        custom:numCol="10"
        custom:oColor="#ff0000"
        custom:pad="10"
        custom:strokeWidth="10"
        custom:xColor="#01e401"
        custom:signToWin="3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button1"
        android:onClick="onClick1"/>


</LinearLayout>